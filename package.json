{
	"name": "@mechanism-engine/ccpm",
	"version": "0.1.5",
	"description": "Unofficial extension manager for Cocos Creator - deploy extensions from npm to projects",
	"license": "MIT",
	"author": "Vladislav Remin <vuliad@users.noreply.github.com>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mechanism-engine/ccpm.git"
	},
	"bugs": "https://github.com/mechanism-engine/ccpm/issues",
	"homepage": "https://github.com/mechanism-engine/ccpm#readme",
	"keywords": ["cocos", "extension", "package-manager", "cli"],
	"type": "module",
	"bin": {
		"ccpm": "dist/cli.js"
	},
	"files": ["dist", "README.md"],
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@npmcli/arborist": "^9.1.9",
		"commander": "^13.0.0"
	},
	"scripts": {
		"build": "rollup -c",
		"dev": "rollup -c -w",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"install:dev": "npm run build && npm install -g ."
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@rollup/plugin-replace": "^6.0.3",
		"@rollup/plugin-typescript": "^12.1.0",
		"@types/node": "^18.19.0",
		"@types/npmcli__arborist": "^6.3.1",
		"@vitest/coverage-v8": "^2.1.0",
		"rollup": "^4.28.0",
		"tslib": "^2.8.0",
		"typescript": "^5.7.0",
		"vitest": "^2.1.0"
	}
}
